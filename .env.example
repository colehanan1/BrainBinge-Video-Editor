# HeyGen Social Clipper - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS
# =============================================================================

# Pexels API Key (Required for B-roll footage)
# Get your free API key at: https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Whisper API Key (Optional - for backup transcription)
# OpenAI API key if using Whisper for transcription
WHISPER_API_KEY=your_whisper_api_key_here

# =============================================================================
# PATHS
# =============================================================================

# Output directory for processed videos
# Default: ./output
OUTPUT_DIR=/path/to/output

# Temporary files directory
# Default: ./temp
TEMP_DIR=/path/to/temp

# Log directory
# Default: ./logs
LOG_DIR=/path/to/logs

# Configuration directory
# Default: ./config
CONFIG_DIR=/path/to/config

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================

# Maximum number of concurrent processing workers
# Recommended: Number of CPU cores - 1
# Default: 1
MAX_WORKERS=4

# Processing timeout in seconds
# Maximum time allowed for processing a single video
# Default: 600 (10 minutes)
PROCESSING_TIMEOUT=600

# Keep temporary files after processing (for debugging)
# Default: false
KEEP_TEMP_FILES=false

# Video quality preset
# Options: low, medium, high, ultra
# Default: high
DEFAULT_QUALITY=high

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook server host
# Default: 0.0.0.0 (all interfaces)
WEBHOOK_HOST=0.0.0.0

# Webhook server port
# Default: 8000
WEBHOOK_PORT=8000

# Webhook authentication secret
# Generate a strong random string for production
# Example: openssl rand -hex 32
WEBHOOK_SECRET=your_secure_webhook_secret_here

# Maximum concurrent webhook processing jobs
# Default: 2
MAX_WEBHOOK_WORKERS=2

# =============================================================================
# LOGGING
# =============================================================================

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Log file path (if not using LOG_DIR)
# Leave empty to use LOG_DIR/heygen-clipper.log
LOG_FILE=

# Enable JSON structured logging
# Default: false
JSON_LOGGING=false

# =============================================================================
# PLATFORM DEFAULTS
# =============================================================================

# Default target platforms (comma-separated)
# Options: instagram, tiktok, youtube, all
# Default: all
DEFAULT_PLATFORMS=all

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable captions by default
# Default: true
ENABLE_CAPTIONS=true

# Enable B-roll integration by default
# Default: true
ENABLE_BROLL=true

# Enable background music by default
# Default: true
ENABLE_MUSIC=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# FFmpeg threads (0 = auto)
# Default: 0
FFMPEG_THREADS=0

# Maximum video resolution (width)
# Default: 1920
MAX_VIDEO_WIDTH=1920

# Maximum video resolution (height)
# Default: 1920
MAX_VIDEO_HEIGHT=1920

# Video bitrate for high quality (in Mbps)
# Default: 12
VIDEO_BITRATE_HIGH=12

# Audio bitrate (in kbps)
# Default: 192
AUDIO_BITRATE=192

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Enable B-roll cache
# Default: true
ENABLE_BROLL_CACHE=true

# B-roll cache directory
# Default: ./cache/broll
BROLL_CACHE_DIR=/path/to/cache/broll

# Cache expiration in days
# Default: 30
CACHE_EXPIRATION_DAYS=30

# =============================================================================
# DEVELOPMENT / DEBUGGING
# =============================================================================

# Enable debug mode
# Default: false
DEBUG=false

# Enable performance profiling
# Default: false
ENABLE_PROFILING=false

# Dry run mode (validate inputs but don't process)
# Default: false
DRY_RUN=false

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3 Configuration (if using S3 for output storage)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=your-output-bucket

# Google Cloud Storage (if using GCS)
# GCS_PROJECT_ID=your-project-id
# GCS_BUCKET_NAME=your-output-bucket
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# =============================================================================
# NOTIFICATION CONFIGURATION (Optional)
# =============================================================================

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# NOTIFICATION_EMAIL=notifications@yourdomain.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Prometheus metrics port
# PROMETHEUS_PORT=9090

# =============================================================================
# NOTES
# =============================================================================
# - All paths should be absolute
# - Secrets should be strong and random
# - For production, use a secure secret management system
# - Environment variables override config file settings
